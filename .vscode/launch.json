{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Jest",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
			"stopOnEntry": false,
			"args": ["--runInBand"],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": ["--nolazy"],
			"env": {
				"NODE_ENV": "development"
			},
			"externalConsole": false,
			"sourceMaps": true,
			"outDir": null
		},
		{
			"name": "Launch Functional",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:9876",
			"webRoot": "${workspaceRoot}",
			"sourceMaps": true,
			"diagnosticLogging": false,
			"userDataDir": "${workspaceRoot}/.vscode/chrome/test"
		},

		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/.bin/jest",
				"--runInBand"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Launch Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080/dist/",
			"webRoot": "${workspaceRoot}",
			"sourceMaps": true,
			"diagnosticLogging": false,
			"userDataDir": "${workspaceRoot}/.vscode/chrome/dev"
		},
		{
			"name": "Debug electron",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable":
					"${workspaceRoot}/node_modules/.bin/electron.cmd"
			},
			"args": ["dist/index.html"]
		}
	]
}
