{
  "name": "platformer",
  "version": "1.0.14",
  "description": "",
  "main": "dist/bundle.js",
  "scripts": {
    "clean": "rm -rf coverage dist",
    "test": "jest",
    "dev:unit": "jest -o --watch",
    "dev": "webpack-dev-server --hot --inline",
    "build": "webpack",
    "functional": "./node_modules/.bin/karma start",
    "electron": "webpack && electron dist/index.html",
    "flow:check": "flow check",
    "flow:suggest": "flow suggest src/Explosion.js",
    "flow:watch": "flow-watch",
    "coverage": "jest --coverage --watch",
    "deploy": "npm version patch && git push && git push --tags",
    "karma": "karma start --reporters nyan",
    "karma:ci": "karma start --reporters coverage-istanbul --browsers ChromeHeadless --single-run",
    "karma:headless": "karma start --reporters nyan --browsers ChromeHeadless",
    "karma:chrome": "karma start --reporters nyan --browsers Chrome",
    "karma:electron": "karma start --reporters nyan --browsers Electron --single-run",
    "electron:karma": "electron-open http://localhost:9876",
    "electron:dev": "electron http://localhost:8080/",
    "electron:debug": "electron --inspect-brk=5859 http://localhost:8080/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digijin/platformer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/digijin/platformer/issues"
  },
  "homepage": "https://github.com/digijin/platformer#readme",
  "devDependencies": {
    "@mfl/flow-jasmine": "^1.6.1",
    "babel-jest": "^18.0.0",
    "coveralls": "^3.0.0",
    "json-loader": "^0.5.7",
    "karma-spec-reporter": "0.0.30",
    "sizzle": "^2.3.3",
    "source-map-loader": "^0.2.3"
  },
  "dependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.9.1",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-native-generators": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "copy-webpack-plugin": "^0.2.0",
    "css-loader": "^0.23.1",
    "electron": "^1.7.9",
    "file-loader": "^0.10.0",
    "flow-bin": "0.38.0",
    "flow-watch": "^1.1.0",
    "fpsmeter": "^0.3.1",
    "glob": "~4.5.3",
    "html-loader": "^0.4.3",
    "img-element-loader": "^1.0.0",
    "isparta-loader": "^2.0.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.8.0",
    "jasmine-es6-generator": "^0.1.0",
    "jest": "^21.2.1",
    "jest-cli": "^18.1.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^0.5.5",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-electron": "^5.2.2",
    "karma-firefox-launcher": "~0.1.4",
    "karma-growl-reporter": "^0.1.1",
    "karma-html-reporter": "^0.2.6",
    "karma-jasmine": "~0.3.5",
    "karma-jasmine-html-reporter": "^0.2.0",
    "karma-nyan-reporter": "0.0.60",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.6",
    "lodash": "^3.8.0",
    "material-ui": "^0.19.4",
    "noisejs": "^2.1.0",
    "optimist": "^0.6.1",
    "raw-loader": "^0.5.1",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-draggable": "^2.2.3",
    "react-redux": "^4.4.5",
    "react-test-renderer": "^15.4.2",
    "redux": "^3.5.2",
    "simplex-noise": "^2.3.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "unityinput": "^0.0.27",
    "url-loader": "^0.5.5",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-stats-plugin": "^0.1.4",
    "webpack-stream": "^3.2.0",
    "write-file-webpack-plugin": "^3.4.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTest.js",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "/src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|styl)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverage": false,
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
