
@font-face {
    src: url('fonts/UrbanJungleDEMO.otf');
    font-family: HeadingFont;
}

@font-face {
    src: url('fonts/keyboard.otf');
    font-family: KeyboardFont;
}

canvas {
    position: absolute;
    z-index: 10;
}

html, body {
    cursor: pointer;
    padding: 0px;
    margin: 0px;
    background-color: lightblue;
}

#ui {
    position: absolute;
    top: 0px;
    left: 0px;
    // right: 0px;
    z-index: 20;

    #ui-container {
        // position: absolute;
        // left: 0px;
        // right: 0px;
        // top: 50%;
        #MainMenuUI {
            position: fixed;
            top: 50%;
            width: 100%;
            height: 100%;
            margin: 50px auto;
            // display: inline-block;
            text-align: center;

            a {
                background-color: white;
                font-family: HeadingFont;
                color: grey;
                transition: color 0.5s;
                border-radius: 20px;
                width: 100px;
                padding: 10px;
                margin: 10px;
                display: inline-block;
                box-shadow: 0 1px 2px #fff, 0 -1px 1px #666, inset 0 -1px 1px rgba(0, 0, 0, 0.5), inset 0 1px 1px rgba(255, 255, 255, 0.8);
            }

            a:hover {
                color: black;
            }

            a:active {
                box-shadow: 0 1px 2px #000, 0 -1px 1px #333, inset 0 -1px 1px rgba(255, 255, 255, 0.5), inset 0 1px 1px rgba(0, 0, 0, 0.8);
            }

            .title {
                position: fixed;
                top: 40px;
                width: 100%;
                font-family: HeadingFont;
                text-shadow: 0px 0px 5px black;
                color: #93112f;
                font-size: 92px;

                .sub {
                    font-size: 32px;
                }

                .subsub {
                    font-size: 24px;
                }
            }

            #instructions {
                font-family: 'Roboto', sans-serif;
                box-shadow: 0px 0px 5px white;
                text-shadow: 0px 0px 5px white;
                background-color: rgba(255, 255, 255, 0.3);

                .key {
                    font-family: KeyboardFont;
                    font-size: 20px;
                }
            }
        }
    }
}

#editor-panel {
    // border: 1px solid black;
    // border-radius: 8px;
    padding: 8px;
    display: inline-block;
    // background-color: rgba(1, 1, 1, 0.5);
}

#background {
    // opacity: 0.5
    z-index: -10;

    .layer1 {
        // opacity: 0.5;
        filter: contrast(20%) blur(1px);
        width: 100%;

        .top {
            background-size: 40% 20%;
            height: 270px;
        }

        .bottom {
            top: 270px;
        }
    }

    .layer2 {
        width: 100%;
        filter: contrast(50%);

        .top {
            height: 350px;
        }

        .bottom {
            top: 350px;
        }
    }

    .top {
        position: absolute;
        background-position: bottom;
        background-repeat: repeat-x;
        width: 100%;
    }

    .bottom {
        position: absolute;
        width: 100%;
        bottom: 0px;
        z-index: -10;
        background-color: black;
    }
}