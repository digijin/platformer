canvas#engineCanvas {
    position: absolute;
    z-index: 12;
}

canvas#pixiCanvas {
    position: absolute;
    z-index: 11;
}

html {
    font-family: roboto;
}

.transition {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 100;
    text-align: center;

    img {
        margin: 100px;
        border: 10px solid #333333;
        border-radius: 100px;
        background-color: grey;
    }
}

html, body {
    cursor: pointer;
    padding: 0px;
    margin: 0px;
    // background-color: black;
    // background-color: white;
    transition: background-color 0.5s;
    overflow: hidden;
}

@keyframes delayOpacityIn {
    0% {
        opacity: 0;
    }

    25% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

#ui {
    position: absolute;
    top: 0px;
    left: 0px;
    // right: 0px;
    z-index: 20;

    #ui-container {
        // position: absolute;
        // left: 0px;
        // right: 0px;
        // top: 50%;
        #MainMenuUI {
            position: fixed;
            top: 70%;
            width: 100%;
            height: 100%;
            margin: 50px auto;
            // display: inline-block;
            text-align: center;
            // opacity: 0;
            animation-name: delayOpacityIn;
            animation-duration: 4s;

            a {
                background-color: white;
                font-family: HeadingFont;
                color: grey;
                transition: color 0.5s;
                border-radius: 20px;
                width: 200px;
                padding: 10px;
                margin: 10px auto;
                display: block;
                box-shadow: 0 1px 2px #fff, 0 -1px 1px #666, inset 0 -1px 1px rgba(0, 0, 0, 0.5), inset 0 1px 1px rgba(255, 255, 255, 0.8);
            }

            a:hover {
                color: black;
            }

            a:active {
                box-shadow: 0 1px 2px #000, 0 -1px 1px #333, inset 0 -1px 1px rgba(255, 255, 255, 0.5), inset 0 1px 1px rgba(0, 0, 0, 0.8);
            }

            .title {
                position: fixed;
                top: 30%;
                width: 100%;
                font-family: HeadingFont;
                text-shadow: 0px 0px 5px black;
                color: #93112f;
                font-size: 92px;

                .sub {
                    font-size: 32px;
                }

                .subsub {
                    font-size: 24px;
                }
            }

            #instructions {
                font-family: 'Roboto', sans-serif;
                box-shadow: 0px 0px 5px white;
                text-shadow: 0px 0px 5px white;
                background-color: rgba(255, 255, 255, 0.3);

                .key {
                    font-family: KeyboardFont;
                    font-size: 20px;
                }
            }
        }
    }
}
