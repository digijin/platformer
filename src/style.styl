}

#background{
    opacity: 0.5
    z-index: -10;
    .layer1{
        opacity: 0.5
    }
    .top {
        position: absolute;
        background-position: bottom;
        background-repeat: repeat-x;
        filter: brightness(0.4);
        width: 100%;
        height: 270px;
    }
    .bottom {
        position: absolute;
        width: 100%;
        top: 270px;
        bottom: 0px;
        z-index: -10;
        background-color: black;
        
    }
}