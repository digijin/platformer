#background {
    // opacity: 0.5
    z-index: -10;

    .layer1 {
        // opacity: 0.5;
        filter: contrast(20%) blur(1px);
        width: 100%;

        .top {
            background-size: 40% 20%;
            height: 270px;
        }

        .bottom {
            top: 270px;
        }
    }

    .layer2 {
        width: 100%;
        filter: contrast(50%);

        .top {
            height: 350px;
        }

        .bottom {
            top: 350px;
        }
    }

    .top {
        position: absolute;
        background-position: bottom;
        background-repeat: repeat-x;
        width: 100%;
    }

    .bottom {
        position: absolute;
        width: 100%;
        bottom: 0px;
        z-index: -10;
        background-color: black;
    }
}